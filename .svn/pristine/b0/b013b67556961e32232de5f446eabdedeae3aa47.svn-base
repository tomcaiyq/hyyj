
html,
body,
#app {
  height: 100%;
  padding: 0;
  margin: 0;
  /* 控制横向上的最小宽度 */
  min-width: 747px;
  background-color: #fff;
  font-size: 16px;
}
a {
  text-decoration: none;
  color: #fff;
}
ul li {
  list-style-type: none;
  padding: 0;
  margin: 0;
  cursor: default;
}
p{
  margin: 0;
}
/* 清除浮动 */
.clearfix::after {
  content: "";
  display: block;
  clear: both;
  height: 0px;
  line-height: 0px;
  visibility: hidden;
}
.clearfix {
  zoom: 1;
}
h1, h2, h3, h4, h5, h6, th { font-size:21px; font-weight:bold;color: #000000;margin: 0; }
p{font-size: 16px;}
.content{
  width: 1003px;
  margin:0 auto;
}
#footer .footerCon{
  width: 1003px;
  margin: 0 auto;
}
#footer{
  background-color: #f5f5f5;
  height: 200px;
}
 #titleCont{
  margin: 0 auto;
  width: 1003px;
  text-align: left;
}
#content{
  position: relative;
  width: 1003px;
  margin: 0 auto;
  /* border:1px solid #ccc; */
}
.btnTitle{
  width: 100px;
  height: 30px;
  line-height:27px;
  text-align: center;
  background: #f2f2f2;
  border-radius: 3px;
  color: #0046cf;
  margin-right: 10px;
  font-size: 14px;
  border: 1px solid #f2f2f2;
  font-weight: bold;
  margin: 10px 10px 10px 0px;
}
.button .btnActive{
  background: rgb(0, 70, 207);
  color:#fff;
}
.btnTitle a{
  color: #0046cf;
}
.button .btnActive a{
  color: #fff;
}
.vodeoTit{
  background: url("../../assets/img/vodeoBac.png");
  background-repeat: no-repeat;
  color: #fff;
  padding-left: 18px;
  margin-bottom: 20px;
  position: relative;
  border-bottom: 2px solid #0064cf;
  font-size: 14px;
}
.vodeoTit span{
  position: absolute;
  right: 0px;
  color: #0064cf;
  font-weight: normal;
}

